<Window
    x:Class="CyberBotGUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Cybersecurity Awareness Bot"
    Width="800"
    Height="600">
    <Grid Margin="10">
        <!--  Header  -->
        <TextBlock
            Margin="0,0,0,10"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Text="Cybersecurity Awareness Chatbot" />

        <!--  Chat Display  -->
        <ScrollViewer Margin="0,40,0,80" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="ChatPanel" />
        </ScrollViewer>

        <!--  Input TextBox  -->
        <TextBox
            Name="InputBox"
            Height="30"
            Margin="0,0,100,10"
            VerticalAlignment="Bottom"
            KeyDown="InputBox_KeyDown" />

        <!--  Send Button  -->
        <Button
            Width="80"
            Height="30"
            Margin="0,0,10,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="Send_Click"
            Content="Send" />
    </Grid>
</Window>

 